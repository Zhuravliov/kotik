#include <stdio.h>
int persistence(int n)
{
  int count=0, a=n, count2=0;
  while(n)
  {
    n/=10;
    count++;
  }
  int arr[count];
  while(a/10)
  {
    count=0;
    for(size_t i=0; a; i++)
    {
      arr[i]=a%10;
      a/=10;
      count++;
    }
    a=1;
    for(int i=0; i<count; i++)
    {
      a*=arr[i];
    }
    count2++;
  }
  return count2;
}
